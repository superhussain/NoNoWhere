@import "custom.bootstrap.import.styl"

footer
   color: $gray-light
   text-align center
   border-top 3px solid $light-blue

   a
      transition: all 0.3s ease-in-out 0s
   h3
      color $light-blue

   .footer-above
      background: $gray-dark
      padding-bottom 2em
   .footer-below
      background: $gray-darker
      line-height 3em
      color: $gray

   .btn-social
      display: inline-block
      width: 50px
      height: 50px
      border: 2px solid $light-blue
      border-radius: 100%
      text-align: center
      font-size: 20px
      line-height: 45px
      margin-top: 15px
      border: 2px solid $light-blue
      color: $light-blue
   .btn-social:hover
      color: $dark-blue
      background: $light-blue
      border: 2px solid $dark-blue

   .navbar-footer li
      float:none;
      text-align left
      display:block;
      *display:inline; /* ie7 fix */
      *zoom:1; /* hasLayout ie7 trigger */
      a
         width:100%
      a:hover
         background $light-blue
         color $gray-darker

   .container
      margin 0 auto
