.jumbotron.player-card
  padding-left 0
  padding-right 0
  padding-bottom 0
  background #F2F1EF
.player-card
  width 100%
  max-width 800px
  margin 0 auto
  box-shadow 0px 0px 80px rgba(black,0.3)
  box-sizing border-box
  .player
    .left
      display flex
      flex-direction column
      align-items flex-start
      float left
      position absolute
      z-index 4
      span
        background salmon
        color beige
        margin 15px 0
        font-size 2em
        font-weight 900
        padding 0.2em 2em
        border-radius 0px 5px 5px 0px
      .team
        width 150px
        margin 2em 4em
    .overlay
      min-height 500px
      min-width 500px
      position absolute
      margin-top -48px
      margin-left 100px
      background linear-gradient(to left, rgba(#F2F1EF,0) 0%,rgba(#F2F1EF,1) 60%)
      z-index 2
    .photo
      height 500px
      float right
      position relative
      top -48px
      border-radius 0px 6px
  .info
    display inline-block
    width 100%
    padding 0px
    text-align center
    margin-top -50px
    position relative
    z-index 5
    h1
      background salmon
      color beige
      font-size 2.75em
      font-weight 900
      text-transform uppercase
      text-shadow 4px 4px 0px rgba(black,0.2)
      padding 40px
      margin 0
    h2
      font-size 2em
      letter-spacing 8px
      margin 20px
      text-transform uppercase
      font-stretch condensed
    p
      margin 0
      padding 20px 40px 40px
  .button-bar
    text-align center
    margin 0 auto
    background #555
    padding 2.5em
    border-radius 0px 0px 5px 5px
    .button
      padding 0.8em 2em
      color white
      background white
      font-weight 900
      margin 1em
      border 3px solid white
      border-radius 5px
      transition all 300ms ease-in-out
      &:hover
        text-decoration none
        color white
    .button-blue
      color #4183D7
      &:hover
        background #4183D7
    .button-green
      color #1BBC9B
      &:hover
        background #1BBC9B
