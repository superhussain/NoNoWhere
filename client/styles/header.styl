.navbar-header
   min-width 300px
.navbar-brand
 padding 0px /* firefox bug fix */
.navbar-brand>img, .navbar-brand>object
 height 100%
 padding 8px /* firefox bug fix */
 width auto

.carousel
   height 50vh
   min-height 400px
   font-family: $font-family-sans-serif
   .item, .active, .carousel-inner
      height 100%
   .fill
      width 100%
      height 100%
      background-position center top
      -webkit-background-size cover
      -moz-background-size cover
      background-size cover
      -o-backgro   und-size cover
   .carousel-skew
      position absolute
      top 0px
      bottom 0px
      right 50%
      z-index 10
      min-width 350px
      color #FFF
      background rgba(0, 0, 40, 0.8)
      text-align left
      text-shadow none
      transform skew(20deg)
      left -10%
      padding 3% 4% 3% 15%
      .unskew
         transform skew(-20deg)
         p
            line-height 1.6em
            font-size 1.4em
            max-width 500px
            font-family $font-family-base
